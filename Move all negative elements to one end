class Solution {
    
    public void segregateElements(int arr[], int n)
    {
    int i=-1;
    int pivot=0;
    for(int j=0;j<n;j++)
    {
        if(a[j]<pivot)
        {
            i++;
        int temp=a[i];
        a[i]=a[j];
        a[j]=temp;
        }
    }
    for(int k=0;k<n;k++)
       System.out.print(a[k]+" ");     
    }
 }
